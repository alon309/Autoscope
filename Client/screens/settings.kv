<SettingsScreen>:
    name: "settings"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: "Icons/otoscope.png"
            size_hint: (None, None)
            size: dp(60), dp(60)
            pos_hint: {"right": 0.98, "top": 0.98}
            
        ClickableImage:
            source: "./Icons/back.png"
            size_hint: (None, None)
            size: dp(65), dp(65)
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release: root.go_back()

        Label:
            text: "Change Settings"
            size_hint: None, None
            size: dp(300), dp(50)
            pos_hint: {"center_x": 0.5, "top": 0.9}
            font_size: dp(30)
            bold: True
            color: 0.3, 0.3, 0.3, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, None)
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

            Label:
                text: "Email"
                size_hint_y: None
                height: dp(20)
                font_size: dp(16)
                halign: "left"
                valign: "middle"
                color: 0.3, 0.3, 0.3, 1
                text_size: self.size

            RoundedTextInput:
                id: email_input
                text: app.user_details.get('details', {}).get("Email", "")
                hint_text: "Email"
                size_hint_y: None
                height: dp(40)
                multiline: False
                padding: [10, (self.height - self.line_height) / 2]
                on_text_validate: root.switch_focus_to_next(self, root.ids.name_input)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, None)
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.56}

            Label:
                text: "Name"
                size_hint_y: None
                height: dp(20)
                font_size: dp(16)
                halign: "left"
                valign: "middle"
                color: 0.3, 0.3, 0.3, 1
                text_size: self.size

            RoundedTextInput:
                id: name_input
                text: app.user_details.get('details', {}).get("Full Name", "")
                hint_text: "Name"
                size_hint_y: None
                height: dp(40)
                multiline: False
                padding: [10, (self.height - self.line_height) / 2]
                on_text_validate: root.switch_focus_to_next(self, root.ids.phone_input)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, None)
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.42}

            Label:
                text: "Phone Number"
                size_hint_y: None
                height: dp(20)
                font_size: dp(16)
                halign: "left"
                valign: "middle"
                color: 0.3, 0.3, 0.3, 1
                text_size: self.size

            RoundedTextInput:
                id: phone_input
                text: app.user_details.get('details', {}).get("Phone Number", "")
                hint_text: "Phone Number"
                size_hint_y: None
                height: dp(40)
                multiline: False
                padding: [10, (self.height - self.line_height) / 2]
                on_text_validate: root.switch_focus_to_next(self, root.ids.gender_input)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, None)
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.28}

            Label:
                text: "Gender"
                size_hint_y: None
                height: dp(20)
                font_size: dp(16)
                halign: "left"
                valign: "middle"
                color: 0.3, 0.3, 0.3, 1
                text_size: self.size

            Spinner:
                id: gender_input
                text: app.user_details.get('details', {}).get("gender", "")
                values: ["male", "female"]
                size_hint_y: None
                background_color: 0.1, 0.6, 0.8, 1
                height: dp(40)

        RoundedButton_:
            text: "Save"
            icon: "./Icons/save.png"
            icon_size: [dp(90), dp(90)]
            size_hint: (0.6, None)
            font_size: dp(24)
            height: dp(68)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            background_color: 0.1, 0.6, 0.8, 1
            on_release: root.save_settings()
