<CustomProgressBar@Widget>:
    progress: 0
    max: 100
    size_hint: (0.8, None)
    height: dp(20)
    pos_hint: {"center_x": 0.5, "center_y": 0.2}

    canvas.before:

        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            size: self.size
            pos: self.pos

        Color:
            rgba:
                (0, 1, 0, (self.progress / 100.0)) if self.progress <= 50 else \
                (1, 0, 0, (self.progress / 100.0))
        Rectangle:
            size: (self.width * (self.progress / (float(self.max) + 0.01)), self.height)
            pos: self.pos


<ResultsScreen>:
    name: "result"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: None, None
            size: dp(300), dp(300)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

            Image:
                id: image_display
                allow_stretch: True
                keep_ratio: True

        Image:
            source: "Icons/otoscope.png"
            size_hint: (None, None)
            size: dp(60), dp(60)
            pos_hint: {"right": 0.98, "top": 0.98}
            
        ClickableImage:
            source: "./Icons/back.png"
            size_hint: (None, None)
            size: dp(65), dp(65)
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release: root.go_back()

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(20)
            size_hint: (0.8, None)
            height: dp(68)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}

            RoundedButton_:
                text: "Save"
                icon: "./Icons/save.png"
                icon_size: [dp(90), dp(90)]
                size_hint: (0.6, None)
                font_size: dp(24)
                height: dp(68)
                background_color: 0.1, 0.6, 0.8, 1
                on_release: root.save_result()

            RoundedButton_:
                text: "Share"
                icon: "./Icons/share.png"
                icon_size: [dp(90), dp(90)]
                size_hint: (0.6, None)
                font_size: dp(24)
                height: dp(68)
                background_color: 0.8, 0.6, 0.1, 1
                on_release: root.share_result()


        Label:
            id: result_label
            text: "No results yet"
            size_hint: 0.8, None
            height: dp(50)
            pos_hint: {"center_x": 0.5, "y": 0.22}
            font_size: dp(18)
            halign: "center"
            valign: "middle"
            color: (0, 0, 0, 1)


        Label:
            id: info_label
            text: "* Over 50% = Infected (red) *\n Under 50% = Normal (green)"
            size_hint: 0.8, None
            height: dp(50)
            pos_hint: {"center_x": 0.5, "y": 0.86}
            font_size: dp(10)
            halign: "center"
            valign: "middle"
            color: (169, 169, 169, 1)

        CustomProgressBar:
            id: progress_bar
            max: 100
            progress: 0