<HistoryScreen>:
    name: "history"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)

            ScrollView:
                GridLayout:
                    id: data_layout
                    cols: 1
                    spacing: dp(10)
                    padding: dp(10)
                    size_hint_y: None
                    height: self.minimum_height

        ClickableImage:
            source: "./Icons/back.png"
            size_hint: (None, None)
            size: dp(65), dp(65)
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release: root.go_back()

        FloatLayout:
            BoxLayout:
                size_hint: (None, None)
                size: dp(100), dp(100)
                spacing: dp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.1}

                ClickableImage:
                    source: "./Icons/img_prev.png"
                    id: prev_button
                    on_release: root.prev_page()

                ClickableImage:
                    source: "./Icons/img_next.png"
                    id: next_button
                    on_release: root.next_page()