<UserLoginScreen>:
    name: "login"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: "Icons/otoscope.png"
            size_hint: (None, None)
            size: dp(120), dp(120)
            pos_hint: {"center_x": 0.5, "top": 0.93}

        Label:
            text: "Autoscope"
            font_size: dp(28)
            color: 0, 0, 0, 1
            size_hint: (None, None)
            pos_hint: {"center_x": 0.5, "top": 0.76}

        Label:
            text: "Early detection of ear infections"
            font_size: dp(14)
            color: 0.4, 0.4, 0.4, 1
            size_hint: (None, None)
            pos_hint: {"center_x": 0.5, "top": 0.72}

        RoundedTextInput:
            id: email_input
            hint_text: "Email"
            hint_text_color: 1, 1, 1, 0.6
            size_hint: (0.8, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            multiline: False
            padding: [10, (self.height - self.line_height) / 2]
            on_text_validate: root.switch_focus_to_next(self, root.ids.password_input)

        RoundedTextInput:
            id: password_input
            hint_text: "Password"
            hint_text_color: 1, 1, 1, 0.6
            password: True
            size_hint: (0.8, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            multiline: False
            padding: [10, (self.height - self.line_height) / 2]
            on_text_validate: root.sign_in_func()

        ClickableImage:
            id: toggle_password_visibility
            source: "./Icons/eye_close.png"
            size_hint: (None, None)
            size: dp(25), dp(25)
            pos_hint: {"center_x": 0.85, "center_y": 0.45}
            on_release: root.toggle_password_visibility(self)

        RoundedButton_:
            text: "Log In"
            size_hint: (0.5, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: root.sign_in_func()

        RoundedButton_:
            text: "Sign Up"
            size_hint: (0.5, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            background_color: 0.3, 0.3, 0.3, 1
            on_release: root.sign_up_func()