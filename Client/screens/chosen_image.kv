<ChosenImageScreen>:
    name: "chosenImage"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: None, None
            size: dp(300), dp(300)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

            Image:
                id: image_display
                allow_stretch: True
                keep_ratio: True

        Image:
            source: "Icons/otoscope.png"
            size_hint: (None, None)
            size: dp(60), dp(60)
            pos_hint: {"right": 0.98, "top": 0.98}
            
        ClickableImage:
            source: "./Icons/back.png"
            size_hint: (None, None)
            size: dp(65), dp(65)
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release: root.go_back()

        RoundedButton_:
            text: "Analyze"
            icon: "./Icons/analyze.png"
            icon_size: [dp(90), dp(90)]
            size_hint: (0.6, None)
            font_size: dp(24)
            height: dp(68)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            background_color: 0.1, 0.6, 0.8, 1
            on_release: root.analyze_image()
