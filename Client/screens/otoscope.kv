<OtoScopeVideoScreen>:
    name: "otoscope"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: "Icons/otoscope.png"
            size_hint: (None, None)
            size: dp(60), dp(60)
            pos_hint: {"right": 0.98, "top": 0.98}
            
        ClickableImage:
            source: "./Icons/back.png"
            size_hint: (None, None)
            size: dp(65), dp(65)
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release: root.go_back()

        BoxLayout:
            size_hint: None, None
            size: dp(300), dp(300)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

            Image:
                id: video_area
                allow_stretch: True
                keep_ratio: True

        RoundedButton_:
            text: "Capture"
            size_hint: (0.6, None)
            font_size: dp(24)
            height: dp(68)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            background_color: 0.1, 0.6, 0.8, 1
            on_release: root.capture_image()

        Spinner:
            id: camera_spinner
            text: "Select Camera"
            values: ["Loading cameras..."]
            size_hint: (0.5, 0.1)
            background_color: 0.1, 0.6, 0.8, 1
            pos_hint: {"center_x": 0.5, "top": 0.9}
            on_text: root.select_camera(root.ids.camera_spinner.text)
