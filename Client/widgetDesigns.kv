<BlueRoundedButton>:
    size_hint: None, None
    size: dp(150), dp(50)
    background_color: 0, 0, 0, 0
    background_normal: ""
    background_down: ""
    color: 1, 1, 1, 1
    font_size: dp(18)
    canvas.before:
        Color:
            rgba: 0.1, 0.6, 0.8, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(25)]

<GrayRoundedButton>:
    size_hint: None, None
    size: dp(150), dp(50)
    background_color: 0, 0, 0, 0
    background_normal: ""
    background_down: ""
    color: 1, 1, 1, 1
    font_size: dp(18)
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(25)]

<BlueRoundedButtonWithIcon>:
    size_hint: None, None
    size: dp(200), dp(50)
    background_color: 0, 0, 0, 0
    background_normal: ""
    background_down: ""
    text: ""
    canvas.before:
        Color:
            rgba: 0.1, 0.6, 0.8, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(25)]
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1
        spacing: dp(10)
        padding: dp(10), 0
        Image:
            source: root.icon
            size_hint: None, None
            size: root.icon_size
            allow_stretch: True
            keep_ratio: True
        Label:
            text: root.text
            color: 1, 1, 1, 1
            font_size: self.font_size
            halign: 'center'
            valign: 'middle'
            size_hint: 1, 1
            text_size: self.size

